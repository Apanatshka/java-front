module languages/Java-1.5/types/types/references

imports
	
	include/Java
	lib/types/-

signature

	constructors
		
		RefType : TypeName * List(TypeParam) -> Type
		
		ClassType     : TypeKind
		InterfaceType : TypeKind
	
rules
	
	create-type-task(|ctx):
		_ -> <type-is(|ctx)> RefType(c, tp*)
		where
		  ?ClassOrInterfaceType(c, tp*)
		+ ?ClassType(c, tp*)
		+ ?InterfaceType(c, tp*)

	create-type-task(|ctx):
		ArrayType(_) -> <type-is(|ctx)>
