module languages/Java-1.5/literals/types/literals

imports
	
	include/Java
	lib/types/-
	types
	
rules
	
	create-type-task(|ctx):
		Bool(_) -> <type-is(|ctx)> Boolean()
		
	create-type-task(|ctx):
		_ -> <type-is(|ctx)> Char()
		where
			?Char(_)
		+ ?Single(_)
	
	// TODO: decide if short, int or long based on size.	
	create-type-task(|ctx):
		_ -> <type-is(|ctx)> Int()
		where
			?Deci(_)
		+ ?Hexa(_)
		+ ?Octa(_)
		
	create-type-task(|ctx):
		Float(_) -> <type-is(|ctx)> Float()
		
	// TODO: type of null is context dependent?
	create-type-task(|ctx):
		Null() -> <fail>
		
	// TODO: look up String class.
	create-type-task(|ctx):
		String(_) -> <type-is(|ctx)> Type("String")
	